<div class="posts-new">
  <div class="container">
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
        <% end %>
        <%= form_tag("/posts/create", {multipart: true}) do %>
        <textarea name ="content"></textarea>
        <input type="submit" value="投稿">
        <% end %>

      </div>

    </div>

  </div>

</div>
