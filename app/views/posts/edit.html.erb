<div class="posts-edit">
  <div class="container">
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
         <div class="form-error">
           <%= message %>
         </div>
         <% end %>
        <%= form_tag("/posts/#{@post.id}/update") do %>
        <textarea name = "content"><%=@post.content %></textarea>
        <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>
