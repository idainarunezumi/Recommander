<div class="post-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%=@post.content %>
      </p>
      <div class="posts-show-time">
        <%=@post.created_at  %>
      </div>
      <div class="posts-menus">
        <ul>
          <li>
            <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          </li>
          <li>
            <%= link_to("削除", "/posts/#{@post.id}/destroy",{method: "post"}) %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
