<div class="posts-index">
  <div class="container">
    <h1 class="posts-heading">投稿一覧</h1>
    <div class="posts-wrapper">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content,"/posts/#{post.id}") %>
      </div>
    <% end %>
    </div>
  </div>
</div>
